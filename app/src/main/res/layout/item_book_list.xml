<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tool="http://schemas.android.com/tools"

    app:cardElevation="@dimen/book_card_elevation"
    app:cardCornerRadius="@dimen/book_card_corner_radius"

    android:layout_margin="@dimen/standart_margin" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="@dimen/standart_margin"
        >

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standart_margin"

            android:textColor="@color/black"

            android:textSize="@dimen/app_large_text"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="title_text_view"

            />

        <TextView
            android:id="@+id/authors_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standart_margin"

            android:textColor="@color/black"
            android:textSize="@dimen/app_normal_text"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            tool:text="authors_text_view" />

       <TextView
            android:id="@+id/published_year_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standart_margin"

            android:textColor="@color/black"
            android:textSize="@dimen/app_normal_text"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toBottomOf="@+id/authors_text_view"
            tool:text="published_year_text_view" />

        <ImageView
            android:id="@+id/book_image_view"
            android:layout_width="70dp"
            android:layout_height="0dp"

            android:layout_margin="@dimen/standart_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/ic_image"
            tool:srcCompat="@tools:sample/avatars" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>